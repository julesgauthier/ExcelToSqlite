{
  "name": "excel-to-sqlite",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:renderer": "vite build",
    "electron": "electron .",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/(transformEngine|initDb).test.js",
    "test:integration": "jest --testPathPattern=__tests__/integration.test.js",
    "dist": "npm run build:renderer && electron-builder",
    "dist:win": "npm run build:renderer && electron-builder --win",
    "dist:mac": "npm run build:renderer && electron-builder --mac",
    "dist:linux": "npm run build:renderer && electron-builder --linux"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "mathjs": "^15.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "electron/**/*.js",
      "!electron/main.js",
      "!electron/preload.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 10000
  },
  "build": {
    "appId": "com.excel2sqlite.app",
    "productName": "Excel2SQLite",
    "directories": {
      "output": "dist_electron"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!**/node_modules/*/{test,__tests__,tests}/**",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    }
  }
}
